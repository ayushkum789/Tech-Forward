{
  "openapi": "3.0.0",
  "info": {
    "title": "Movies API",
    "description": "A comprehensive API for managing movie records",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:5065",
      "description": "Development server"
    }
  ],
  "paths": {
    "/api/movies": {
      "get": {
        "summary": "Get All Movies",
        "description": "Retrieves a list of all movies in the database",
        "operationId": "getAllMovies",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Movie"
                  }
                },
                "example": [
                  {
                    "id": 1,
                    "title": "The Shawshank Redemption",
                    "director": "Frank Darabont",
                    "year": 1994,
                    "genre": "Drama",
                    "rating": 9.3
                  },
                  {
                    "id": 2,
                    "title": "The Godfather",
                    "director": "Francis Ford Coppola",
                    "year": 1972,
                    "genre": "Crime",
                    "rating": 9.2
                  },
                  {
                    "id": 3,
                    "title": "The Dark Knight",
                    "director": "Christopher Nolan",
                    "year": 2008,
                    "genre": "Action",
                    "rating": 9.0
                  }
                ]
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create Movie",
        "description": "Creates a new movie entry in the database. The ID will be automatically generated.",
        "operationId": "createMovie",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/MovieInput"
              },
              "example": {
                "title": "Inception",
                "director": "Christopher Nolan",
                "year": 2010,
                "genre": "Sci-Fi",
                "rating": 8.8
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Movie"
                },
                "example": {
                  "id": 6,
                  "title": "Inception",
                  "director": "Christopher Nolan",
                  "year": 2010,
                  "genre": "Sci-Fi",
                  "rating": 8.8
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "message": "Movie data is required",
                  "statusCode": 400
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/movies/{id}": {
      "get": {
        "summary": "Get Movie by ID",
        "description": "Retrieves a specific movie by its unique identifier",
        "operationId": "getMovieById",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "The unique identifier of the movie",
            "schema": {
              "type": "integer",
              "example": 1
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Movie"
                },
                "example": {
                  "id": 1,
                  "title": "The Shawshank Redemption",
                  "director": "Frank Darabont",
                  "year": 1994,
                  "genre": "Drama",
                  "rating": 9.3
                }
              }
            }
          },
          "404": {
            "description": "Not Found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "message": "Movie not found",
                  "statusCode": 404
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      },
      "put": {
        "summary": "Update Movie",
        "description": "Updates an existing movie's information. All fields are required.",
        "operationId": "updateMovie",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "The unique identifier of the movie to update",
            "schema": {
              "type": "integer",
              "example": 1
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/MovieInput"
              },
              "example": {
                "title": "The Shawshank Redemption (Updated)",
                "director": "Frank Darabont",
                "year": 1994,
                "genre": "Drama",
                "rating": 9.4
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Movie"
                },
                "example": {
                  "id": 1,
                  "title": "The Shawshank Redemption (Updated)",
                  "director": "Frank Darabont",
                  "year": 1994,
                  "genre": "Drama",
                  "rating": 9.4
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "message": "Invalid movie data",
                  "statusCode": 400
                }
              }
            }
          },
          "404": {
            "description": "Not Found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "message": "Movie not found",
                  "statusCode": 404
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Delete Movie",
        "description": "Deletes a movie from the database. This action cannot be undone.",
        "operationId": "deleteMovie",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "The unique identifier of the movie to delete",
            "schema": {
              "type": "integer",
              "example": 5
            }
          }
        ],
        "responses": {
          "204": {
            "description": "No Content - Movie successfully deleted"
          },
          "404": {
            "description": "Not Found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "message": "Movie not found",
                  "statusCode": 404
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Movie": {
        "type": "object",
        "required": ["id", "title", "director", "year", "genre", "rating"],
        "properties": {
          "id": {
            "type": "integer",
            "description": "Unique identifier for the movie",
            "example": 1
          },
          "title": {
            "type": "string",
            "description": "Movie title",
            "minLength": 1,
            "maxLength": 200,
            "example": "Inception"
          },
          "director": {
            "type": "string",
            "description": "Director name",
            "minLength": 1,
            "maxLength": 100,
            "example": "Christopher Nolan"
          },
          "year": {
            "type": "integer",
            "description": "Release year",
            "minimum": 1888,
            "maximum": 2100,
            "example": 2010
          },
          "genre": {
            "type": "string",
            "description": "Movie genre",
            "minLength": 1,
            "maxLength": 50,
            "example": "Sci-Fi"
          },
          "rating": {
            "type": "number",
            "format": "double",
            "description": "Rating score",
            "minimum": 0.0,
            "maximum": 10.0,
            "example": 8.8
          }
        }
      },
      "MovieInput": {
        "type": "object",
        "required": ["title", "director", "year", "genre", "rating"],
        "properties": {
          "title": {
            "type": "string",
            "description": "Movie title",
            "minLength": 1,
            "maxLength": 200,
            "example": "Inception"
          },
          "director": {
            "type": "string",
            "description": "Director name",
            "minLength": 1,
            "maxLength": 100,
            "example": "Christopher Nolan"
          },
          "year": {
            "type": "integer",
            "description": "Release year",
            "minimum": 1888,
            "maximum": 2100,
            "example": 2010
          },
          "genre": {
            "type": "string",
            "description": "Movie genre",
            "minLength": 1,
            "maxLength": 50,
            "example": "Sci-Fi"
          },
          "rating": {
            "type": "number",
            "format": "double",
            "description": "Rating score",
            "minimum": 0.0,
            "maximum": 10.0,
            "example": 8.8
          }
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "description": "Error message",
            "example": "An error occurred"
          },
          "statusCode": {
            "type": "integer",
            "description": "HTTP status code",
            "example": 500
          }
        }
      }
    }
  }
}
